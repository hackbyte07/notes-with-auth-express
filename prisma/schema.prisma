generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
  notes    Notes[]
}

model Notes {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  body      String
  createdAt String

  Users   Users?  @relation(fields: [usersId], references: [id])
  usersId String? @db.ObjectId
}
